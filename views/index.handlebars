<div class="row my-4">
    <div class="col-12 col-sm-6 text-right">
        <div class="row burger-undevoured">
            {{#if burgers.[0]}}
            <div class="col-12 text-center">
                <h5 class="burger-heading pr-5 py-2">
                    <i class="fas fa-hamburger"></i> Available
                </h5>
            </div>
            {{/if}}
            {{#each burgers}}
            {{#unless devoured}}
            {{> burger-block}}
            {{/unless}}
            {{/each}}
        </div>
    </div>
    <div class="col-12 col-sm-6 text-left">
        <div class="row burger-devoured">
            {{#if burgers.[0]}}
            <div class="col-12 text-center">
                <h5 class="burger-heading pr-5 py-2">
                    <i class="fas fa-utensils"></i> Devoured</h5>
            </div>
            {{/if}}
            {{#each burgers}}
            {{#if devoured}}
            {{> burger-devoured}}
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>
<div class="row mt-5">
    <div class="col-12 text-center">
        <form>
            <div class="form-group">
                <textarea class="form-control text-left new-burger-name mx-auto" rows="3"
                    placeholder="Enter a burger name ..."></textarea>
            </div>
            <div class="form-group pt-1">
                <button type="submit" class="btn btn-primary new-burger mx-auto">Create It!</button>
            </div>
            <div class="form-group create-footer">
                <p>Enter a burger you want to eat, Click the "Create It!" button.</p>
            </div>
        </form>
    </div>
</div>